<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #0e1113;">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0">
        <Label text="Login" font="$x1.5" textFill="WHITE"/>
        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #ffffff;"/>
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #ffffff;"/>
        <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>
        <Label text="Don't have an account? Sign up!" textFill="WHITE"/>
    </VBox>
</AnchorPane>