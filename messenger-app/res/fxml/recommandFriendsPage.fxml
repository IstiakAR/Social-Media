<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" style="-fx-background-color: #0e1113; -fx-padding: 20;">
    <Label text="Recommended Friends" font="$fontBold" textFill="WHITE" />
    <VBox fx:id="friendListContainer" spacing="5" alignment="TOP_CENTER" />
    <Button text="Refresh" onAction="#handleRefresh" style="-fx-background-color: #007BFF; -fx-text-fill: white;" />
</VBox>