<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AddPostController">
    <children>
        <Label text="Add New Post" />
        <TextArea fx:id="postContent" promptText="Enter your post content here..." prefHeight="200.0" prefWidth="300.0" />
        <Button text="Submit" onAction="#handleSubmit" />
        <Button text="Cancel" onAction="#handleCancel" />
    </children>
</VBox>